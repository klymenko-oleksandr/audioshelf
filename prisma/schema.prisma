generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Book {
  id        String       @id @default(cuid())
  title     String
  author    String
  coverUrl  String?
  createdAt DateTime     @default(now())
  audio     AudioAsset?
}

model AudioAsset {
  id        String   @id @default(cuid())
  bookId    String   @unique
  objectKey String
  mimeType  String
  createdAt DateTime @default(now())
  book      Book     @relation(fields: [bookId], references: [id], onDelete: Cascade)
}
